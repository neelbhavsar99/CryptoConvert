<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">














    <!-- Layout to contain contents of main body of screen (drawer will slide over this) -->
   <AbsoluteLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <View
           android:layout_width="match_parent"
           android:layout_height="176dp"
           android:layout_x="0dp"
           android:layout_y="0dp"
           android:background="@color/colorPrimary">

       </View>

       <Spinner
           android:id="@+id/spinner2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_x="166dp"
           android:layout_y="230dp"></Spinner>

       <TextView
           android:id="@+id/enterValText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="191dp"
           android:layout_x="130dp"
           android:layout_y="265dp"
           android:fontFamily="@font/capriola"
           android:text="Enter your value" />


       <TextView
           android:id="@+id/enterValText2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="191dp"
           android:layout_x="88dp"
           android:layout_y="198dp"
           android:fontFamily="@font/capriola"
           android:text="Choose your CryptoCurrency" />

       <TextView
           android:id="@+id/enterValText3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="191dp"
           android:layout_x="130dp"
           android:layout_y="149dp"
           android:fontFamily="@font/capriola"
           android:text="Powered by "
           android:textColor="#ffff"
           android:textSize="10sp" />

       <LinearLayout
           android:layout_width="179dp"
           android:layout_height="wrap_content"
           android:layout_below="@+id/enterValText"
           android:layout_alignStart="@+id/imageView2"
           android:layout_x="103dp"
           android:layout_y="291dp"
           android:gravity="center">

           <Spinner
               android:id="@+id/spinner1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">


           </Spinner>

           <EditText
               android:id="@+id/currencyVal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:layout_x="162dp"
               android:layout_y="194dp"
               android:ems="10"
               android:fontFamily="@font/capriola"
               android:inputType="text|number"
               android:orientation="horizontal"
               android:textAlignment="center" />
       </LinearLayout>


       <TextView
           android:id="@+id/convertedlabel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           android:layout_marginStart="102dp"
           android:layout_x="49dp"
           android:layout_y="345dp"
           android:fontFamily="@font/capriola"
           android:text="$1 in Crpyto"
           android:textSize="18sp"
           android:typeface="normal" />

       <TextView
           android:id="@+id/oneBTC"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_x="171dp"
           android:layout_y="345dp"
           android:fontFamily="@font/capriola"
           android:paddingLeft="20dp"
           android:text=" "
           android:textAlignment="viewStart"
           android:textSize="18sp" />


       <TextView
           android:id="@+id/convertedlabel2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentStart="true"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="214dp"
           android:layout_x="56dp"
           android:layout_y="377dp"
           android:fontFamily="@font/capriola"
           android:text="Converted"
           android:textSize="18sp"
           android:typeface="normal" />


       <TextView
           android:id="@+id/convertedVal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/convertedlabel2"
           android:layout_centerHorizontal="true"
           android:layout_x="171dp"
           android:layout_y="379dp"
           android:fontFamily="@font/capriola"
           android:paddingLeft="20dp"
           android:text=" "
           android:textAlignment="viewStart"
           android:textSize="18sp" />


       <Button
           android:id="@+id/clickBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="115dp"
           android:layout_x="146dp"
           android:layout_y="418dp"
           android:backgroundTint="@android:color/holo_blue_light"
           android:fontFamily="@font/capriola"
           android:text="Convert"
           android:textAlignment="center" />

       <ImageView
           android:id="@+id/logov2"
           android:layout_width="188dp"
           android:layout_height="147dp"
           android:layout_x="108dp"
           android:layout_y="0dp"
           app:srcCompat="@drawable/logov2"
           tools:layout_editor_absoluteX="148dp"
           tools:layout_editor_absoluteY="77dp" />

       <TextView
           android:id="@+id/factsText"
           android:layout_width="116dp"
           android:layout_height="wrap_content"
           android:layout_x="136dp"
           android:layout_y="474dp"
           android:textAlignment="center"
           tools:layout_editor_absoluteX="159dp"
           tools:layout_editor_absoluteY="500dp" />

       <ImageView
           android:id="@+id/imageView"
           android:layout_width="95dp"
           android:layout_height="95dp"
           android:layout_x="200dp"
           android:layout_y="108dp"
           app:srcCompat="@drawable/ic_cptlogo"
           tools:layout_editor_absoluteX="317dp"
           tools:layout_editor_absoluteY="106dp" />

   </AbsoluteLayout>
    <!-- Container for contents of drawer - use NavigationView to make configuration easier -->
   <android.support.design.widget.NavigationView
       android:layout_width="240dp"
       android:id="@+id/navigationView"
       android:layout_height="match_parent"
       android:gravity="center_horizontal"
       android:layout_gravity="start"
       android:background="#fff"
       app:menu="@menu/drawer_menu"
       >


   </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>