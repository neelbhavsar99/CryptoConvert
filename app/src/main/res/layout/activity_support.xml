<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supportActivity">

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="149dp"
            android:layout_y="45dp"
            android:text="Support"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="222dp"
            android:layout_height="76dp"
            android:layout_x="110dp"
            android:layout_y="251dp"
            android:text="Please call or email us for any issues.Just copy-paste email or hold it down and selecte email."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="16dp"
            android:layout_y="113dp"
            android:text="Email"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="111dp"
            android:layout_y="113dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="support@cryptotrx.store"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="96dp" />

    </AbsoluteLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="240dp"
        android:id="@+id/navigationView"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:background="#fff"
        app:menu="@menu/drawer_menu"
        >


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>